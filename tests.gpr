with "pipelib.gpr";
with "abohlib.gpr";

project Tests is

   for Source_Dirs use ("tests", "tests/**");
   for Object_Dir use "obj/tests";
   for Exec_Dir use "bin";
   for Main use ("main.adb",
                 "test_count_arithmetic.adb");

   package Compiler is
      for Default_Switches ("Ada") use Pipelib.Compiler'Default_Switches ("Ada");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Builder is
      for Default_Switches ("Ada") use ("-g"); --  Debug info
   end Builder;

end Tests;
